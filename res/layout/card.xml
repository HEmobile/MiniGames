<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flipper"
    android:layout_width="@dimen/card_side_size"
    android:layout_height="@dimen/card_side_size" >
    
<!--  The child Views/Layout to flip -->

<!--  Layout 1 for 1st Screen -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/card_back"
                android:contentDescription="@string/card_back" />
            
    </LinearLayout>
    
     <!--  Layout 2 for 2nd Screen -->
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/frontImage"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_bg"
                android:contentDescription="@string/card_front" />
            
    </LinearLayout>


</ViewFlipper>
